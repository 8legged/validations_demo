<h1>People</h1>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Age</th>
    <th></th>
  </tr>
<% @people.each do |person| %>
  <tr>
    <th><%= person.first_name %></th>
    <th><%= person.last_name %></th>
    <th><%= person.email %></th>
    <th><%= person.age %></th>
    <th>
      <%= link_to 'Edit', edit_person_path(person) %> |
      <%= link_to 'Delete', person_path(person), method: :delete, data: {confirm: 'Are you sure?'} %>
    </th>
  </tr>
<% end %>
</table>

<%= link_to 'New Person', new_person_path %>

