<% @pet.errors.full_messages.each do |msg| %>
  <div class="field_with_errors"><%= msg %>
  </div>
  <% end %>

<%= form_for @pet do |f| %>
<div>
<%= f.label :name %>
<%= f.text_field :name %>
</div>
<div>
<%= f.label :color %>
<%= f.text_field :color %>
</div>
<div>
<%= f.submit "Add Pet!" %>
</div>
<% end %>